<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFDEE9"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/back"
            android:background="@drawable/backiconwhite" />

        <TextView
            android:id="@+id/textView_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[ 사용자 정보 및 펫 정보 수정 ]"
            android:fontFamily="@font/atitlegothic"
            android:textColor="#DB7093"
            android:padding="7dp"
            android:background="#FFFFFF"
            android:textSize="25dp"
            android:layout_margin="15dp"
            android:gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:weightSum="5">

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="닉네임 : "
                android:fontFamily="@font/atitlegothic"
                android:textSize="20dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/textView_m_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/agothic"
                android:textSize="20dp"
                android:layout_weight="4"
                android:ellipsize="end"
                android:maxLines="1"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:weightSum="5">

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="ID : "
                android:fontFamily="@font/atitlegothic"
                android:textSize="20dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/textView_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="abab@naver.com"
                android:fontFamily="@font/agothic"
                android:textSize="20dp"
                android:layout_weight="4"
                android:ellipsize="end"
                android:maxLines="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:weightSum="5">

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="PW : "
                android:fontFamily="@font/atitlegothic"
                android:textSize="20dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"/>

            <EditText
                android:id="@+id/editText_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="변경하실 비밀번호를 입력하세요"
                android:fontFamily="@font/agothic"
                android:layout_weight="3"
                android:textSize="15dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxLength="10"/>

            <Button
                android:id="@+id/btn_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호 변경"
                android:textColor="#FF6A89"
                android:background="#FFCFDA"
                android:fontFamily="@font/atitlegothic"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:weightSum="5">


            <EditText
                android:id="@+id/editText_pw_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="비밀번호 확인"
                android:fontFamily="@font/agothic"
                android:layout_weight="5"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="95dp"
                android:textSize="15dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxLength="10"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="반려동물 이름 : "
                android:fontFamily="@font/atitlegothic"
                android:textSize="20dp"
                android:layout_weight="2.2"
                android:ellipsize="end"
                android:maxLines="1"
                />

            <EditText
                android:id="@+id/editText_pet_name"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/agothic"
                android:textSize="15dp"
                android:hint="이름을 입력해주세요"
                android:layout_weight="2.8"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxLength="10"/>

            <Button
                android:id="@+id/btn_pet_name"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:background="#FFCFDA"
                android:fontFamily="@font/atitlegothic"
                android:text="등록"
                android:textColor="#FF6A89" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:weightSum="5">

            <TextView
                android:id="@+id/textView_species"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="반려동물 종"
                android:fontFamily="@font/atitlegothic"
                android:textSize="20dp"
                android:layout_weight="5"
                android:ellipsize="end"
                android:maxLines="1"/>

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:weightSum="9">

            <TextView
                android:id="@+id/textView_height"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="반려동물 나이"
                android:fontFamily="@font/atitlegothic"
                android:textSize="20dp"
                android:layout_weight="5"
                android:ellipsize="end"
                android:maxLines="1"/>

            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:weightSum="9">

            <TextView
                android:id="@+id/textView_h"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="반려동물 키"
                android:fontFamily="@font/atitlegothic"
                android:textSize="20dp"
                android:layout_weight="3"
                android:ellipsize="end"
                android:maxLines="1"/>

            <EditText
                android:id="@+id/editText_h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/agothic"
                android:textSize="15dp"
                android:hint="키 입력"
                android:layout_weight="2" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="cm"
                android:fontFamily="@font/agothic"
                android:textSize="20dp"
                android:layout_weight="2"
                android:ellipsize="end"
                android:maxLines="1"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_edit_done"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:textColor="#FF6A89"
            android:background="#FFCFDA"
            android:layout_gravity="center"
            android:fontFamily="@font/atitlegothic"
            android:layout_marginTop="30dp"
            android:text="정보 수정 완료"
            />

    </LinearLayout>
</ScrollView>