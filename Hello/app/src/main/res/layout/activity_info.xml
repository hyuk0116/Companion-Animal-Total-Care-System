<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFDEE9"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/back"
            android:background="@drawable/backiconwhite" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[ 사용자 정보 및 펫 정보 확인 ]"
            android:drawableStart="@drawable/nounsearch"
            android:fontFamily="@font/atitlegothic"
            android:textSize="25dp"
            android:textColor="#DB7093"
            android:padding="7dp"
            android:background="#FFFFFF"
            android:layout_margin="15dp"
            android:gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:weightSum="5">

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text=" ID : "
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/atitlegothic"
                android:textSize="20dp"
                android:layout_weight="2"
                android:ellipsize="end"
                android:drawableStart="@drawable/nouneamil"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/textView_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/agothic"
                android:textSize="20dp"
                android:layout_weight="3"
                android:ellipsize="end"
                android:maxLines="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:layout_marginTop="10dp"
            android:weightSum="5">

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text=" 닉네임 : "
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/atitlegothic"
                android:textSize="20dp"
                android:layout_weight="2"
                android:ellipsize="end"
                android:drawableStart="@drawable/nounaccount"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/textView_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/agothic"
                android:textSize="20dp"
                android:layout_weight="3"
                android:ellipsize="end"
                android:maxLines="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:layout_marginTop="10dp"
            android:weightSum="5">

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text=" 반려동물 이름 : "
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:fontFamily="@font/atitlegothic"
                android:layout_weight="3"
                android:drawableStart="@drawable/nounname"
                android:ellipsize="end"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/textView_pet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/agothic"
                android:textSize="20dp"
                android:layout_weight="3"
                android:ellipsize="end"
                android:maxLines="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:layout_marginTop="10dp"
            android:weightSum="5">

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text=" 반려동물 종 : "
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/atitlegothic"
                android:textSize="20dp"
                android:layout_weight="3"
                android:drawableStart="@drawable/nounanimals"
                android:ellipsize="end"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/textView_pet_species"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/agothic"
                android:textSize="20dp"
                android:layout_weight="3"
                android:ellipsize="end"
                android:maxLines="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:layout_marginTop="10dp"
            android:weightSum="5">

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text=" 반려동물 품종 : "
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/atitlegothic"
                android:textSize="20dp"
                android:layout_weight="3.3"
                android:drawableStart="@drawable/nounspecies"
                android:ellipsize="end"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/textView_pet_breed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/agothic"
                android:textSize="20dp"
                android:layout_weight="3"
                android:ellipsize="end"
                android:maxLines="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:layout_marginTop="10dp"
            android:weightSum="5">

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text=" 반려동물 키 : "
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/atitlegothic"
                android:textSize="20dp"
                android:layout_weight="3"
                android:drawableStart="@drawable/nounheight"
                android:ellipsize="end"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/textView_pet_height"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/agothic"
                android:textSize="20dp"
                android:layout_weight="3"
                android:ellipsize="end"
                android:maxLines="1"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:textColor="#FF6A89"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#FFCFDA"
            android:fontFamily="@font/atitlegothic"
            android:text="정보 수정"/>

    </LinearLayout>
</ScrollView>